<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="350dp" />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_below="@+id/top_view"
        android:layout_marginTop="-50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_devedesetdevet"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/devedesetdevet"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_devedesetdevet"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="99 Names"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_quran"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/quran"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_quran"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Quran"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_kabba_kibla"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kabba_kibla"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_kabba_kibla"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Qibla"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_duas"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/duas"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_duas"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Duas"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_tasbih"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tasbih"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_tasbih"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Tasbih"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_islamic_calendar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/islamic_calendar"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_islamic_calendar"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Calendar"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_mosques"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mosques"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_mosques"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Mosques"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_donations"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/donations"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_donations"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Donation"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#00000000"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_clock"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/clock"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/text_clock"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Prayers"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>



    </GridLayout>

</RelativeLayout>

