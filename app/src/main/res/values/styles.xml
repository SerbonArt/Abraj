<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Ovde se uredjuje tema aplikacije. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Ostali atributi stila -->
        <item name="android:windowBackground">@drawable/background_day</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Specifična tema za Launcher ili SplashScreen -->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <!-- Nasleđuje sve od AppTheme i dodaje dodatne prilagodbe specifične za početni ekran -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item> <!-- Podesite veličinu teksta po želji -->
        <!-- Dodajte druge atribute teksta ako je potrebno, kao što su boja, font... -->
    </style>
</resources>
